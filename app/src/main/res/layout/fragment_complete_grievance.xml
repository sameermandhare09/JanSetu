<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="cssl.dialstar.user_fragment.CompleteGrievance"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:text="total count:"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/txtviewcount"

            />


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:id="@+id/imgeviewfilter"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:visibility="gone"
        android:id="@+id/relativefilterdates">

        <TextView
            android:id="@+id/txtviewfromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtviewtodate"
            android:layout_alignBottom="@+id/txtviewtodate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="79dp"
            android:padding="5dp"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtviewtodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            android:padding="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignBottom="@+id/txtviewfromdate"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtviewfromdate"
            android:textSize="15dp"
            android:text="From Date:" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtviewtodate"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txtviewtodate"
            android:padding="5dp"
            android:text="To Date:"
            android:textSize="15dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Data not present"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/txtview"
        android:visibility="gone"
        />




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />


</LinearLayout>
