    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
      >

        <EditText
            android:id="@+id/edward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/Ward_Name"
            android:inputType="text"
          />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtmandal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
        >

        <EditText
            android:id="@+id/edmandal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/Mandal_Name"
            android:inputType="text"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtassociation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
        >

        <EditText
            android:id="@+id/edassociation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/Association_Name"
            android:inputType="text"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"

            android:id="@+id/txtmobilenumber">

            <EditText
                android:id="@+id/edmobilenumber"
                android:hint="@string/Mobile_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_gravity="center"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            android:theme="@style/Textinputlayout"
            style="@style/Textinputlayout"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/edemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:hint="Voter Id"
        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
        android:id="@+id/txtvoterid">

        <EditText
            android:id="@+id/edvoterid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPhonetic"
            android:maxLength="12"
            android:layout_gravity="center"/>
    </android.support.design.widget.TextInputLayout>



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/txtpic"

        android:textColor="@color/highlighted_definetext_user"
            android:textSize="17dp"
        android:layout_marginLeft="10dp"
            android:text="@string/Profile_pic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btnSelectPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_camera_enhance_black_24dp" />


        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/ivImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/noimage" />

    </LinearLayout>

    <Button
        android:id="@+id/btnchngpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbluebtn"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:text="@string/Change_Password"
        android:visibility="gone"

        android:layout_gravity="center" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbluebtn"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:text="@string/save"

            android:layout_gravity="center" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView >
