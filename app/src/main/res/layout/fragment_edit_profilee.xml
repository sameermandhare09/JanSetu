<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="user_fragment.EditProfilee">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        tools:context="cssl.dialstar.representative_activity.Register">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/highlighted_definetext_user"
        android:padding="5dp"

        android:text="@string/EDIT_PROFILE"
        android:textStyle="bold"
        android:textSize="20dp"


        />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            android:theme="@style/Textinputlayout"
            style="@style/Textinputlayout"
            android:id="@+id/txtname">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edname"
                android:hint="@string/Name"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Gender"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/rbggender"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Male"
            android:checked="true"
            android:id="@+id/rbmale"
            android:layout_weight="0.2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Female"
            android:id="@+id/rbfemale"
            android:layout_weight="0.2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Other"
            android:id="@+id/rbother"
            android:layout_weight="0.2"/>

    </RadioGroup>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
        android:id="@+id/txtdob">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dob"
            android:id="@+id/eddob"
            android:focusable="false"/>
    </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:theme="@style/Textinputlayout"
            style="@style/Textinputlayout"

            android:layout_marginLeft="10dp"
            android:id="@+id/txtaddress">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/Address"
                android:id="@+id/edaddress"/>
        </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"

        android:layout_marginLeft="10dp"
        android:id="@+id/txtstate">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="@string/State"
            android:id="@+id/edstate"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"

        android:layout_marginLeft="10dp"
        android:id="@+id/txtdistrict">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="false"
            android:hint="@string/District"
            android:id="@+id/eddistrict"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"

        android:layout_marginLeft="10dp"
        android:id="@+id/txtcity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/City"
            android:focusable="false"
            android:id="@+id/edcity"/>
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:theme="@style/Textinputlayout"
        style="@style/Textinputlayout"
        android:layout_marginLeft="10dp"
        android:id="@+id/txtpin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/Pin_Code"
            android:focusable="false"
            android:maxLength="6"
            android:id="@+id/edpin"/>
    </android.support.design.widget.TextInputLayout>

