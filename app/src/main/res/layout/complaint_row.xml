<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_margin="7dp"
    card_view:cardElevation="6dp"

    app:cardBackgroundColor="@color/offwhite3"
    android:textAlignment="center"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_complaint_name"
            android:paddingLeft="5dp"
            android:text="Subject"
            android:textColor="@color/black"
            android:textSize="15sp"

            />
        <TextView
            android:id="@+id/txtView_complaint_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:paddingLeft="5dp"
            />


        <!--android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtView_descript"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="description"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtassignedto"
                android:ellipsize="end"
                android:text="Assigned to: kunal"
                android:visibility="gone"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"

            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="11dp"
                android:text="Created by "
                />


            <TextView
                android:id="@+id/txtView_created_by"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:textSize="11dp"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="11dp"
                android:text=" On "
                />

            <TextView
                android:id="@+id/txtView_complaint_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="11dp"
                android:paddingLeft="2dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="@string/Assigned_to"
                />


            <TextView
                android:id="@+id/txtView_assigned_to"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="11dp"
                android:paddingLeft="2dp"

                android:layout_gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/lnr_acknowledge"
            android:visibility="gone">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Acknowledge_by"
                android:textSize="11dp"
                />

            <TextView
                android:id="@+id/txtView_acknowledgeby"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:layout_gravity="right"
                android:textSize="11dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/On"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/txtView_acknowledgedate"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:layout_gravity="right"
                android:textSize="11dp"
                android:layout_height="wrap_content" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"

            android:id="@+id/lnr_close"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Closed_by"
                android:textSize="11dp"

                />


            <TextView
                android:id="@+id/txtView_Closeby"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:textSize="11dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="@string/On"

                />

            <TextView
                android:id="@+id/txtView_Closedate"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="2dp"
                android:textSize="11dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:id="@+id/lnr_close1"
                        android:visibility="gone">



                    </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/offwhite"
            android:padding="5dp"
            android:visibility="gone">



            <TextView
                android:id="@+id/txtView_address"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="11dp"
                android:paddingLeft="2dp"

                android:layout_gravity="right"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:id="@+id/relativebuttons">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_margin="2dp"
                android:layout_alignParentLeft="true"
                android:visibility="visible"
                android:id="@+id/btngrievanceedit"
                />

            <Button
                android:id="@+id/btngrievancedelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:visibility="visible"
                android:text="Delete" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dim_foreground_holo_dark"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:id="@+id/btnviewdetails">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/VIEW_DETAILS"
                android:paddingRight="25dp"
                android:textColor="@color/btnblue"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
   <!--     <Button
            android:id="@+id/btnviewdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/VIEW_DETAILS"
            android:paddingLeft="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/squarewhitebtn"
            android:paddingRight="25dp"/>
-->
    </LinearLayout>




</android.support.v7.widget.CardView>
