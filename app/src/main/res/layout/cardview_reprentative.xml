<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:cardBackgroundColor="@color/offwhite3"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

           <!-- <ImageView
                android:id="@+id/imageViewRepImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_gravity="center_horizontal"

                 />-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageViewRepImage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                />

            <TextView
                android:id="@+id/textViewRepName"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_height="wrap_content"
                android:text="Representative"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"

              />

            <TextView
                android:id="@+id/textViewWardNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/textViewIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="200"
                android:padding="3dp"
                android:background="@color/captureImageBack"
                android:textColor="@color/white"
                android:textSize="13sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
