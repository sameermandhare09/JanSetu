<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RadioGroup android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/politicalparty"
            android:checked="true"
            android:layout_height="wrap_content"

            android:text="Political Party"
            android:layout_weight="5"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/elective"
            android:layout_height="wrap_content"
            android:text="Elective"
            android:layout_weight="5"

            />
    </RadioGroup>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_weight="0.07">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/txtpolticalparty"
            android:visibility="gone"
            android:text="Political Party:" />
        <Spinner
            android:id="@+id/sppoliticalparty"
            android:layout_width="match_parent"
            android:background="@drawable/spinner"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/txtrepresent"
            android:text="Representative:" />
        <Spinner
            android:id="@+id/sprepresent"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/spinner"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />


    </LinearLayout>


</LinearLayout>